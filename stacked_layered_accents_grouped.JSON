{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "https://polyrhythm-project.github.io/vegalitetest/129S.tsv",
    "format": {"parse": {"position": "number"}}
  },
  "transform": [
    {
      "joinaggregate": [{
        "op": "min",
        "field": "position",
        "as": "measureminpos"
      }],
      "groupby": [
        "measure"
      ]
    },
    {"calculate": "-datum.notesB", "as": "notesBX"}
  ],
  "layer": [
    {
      "width": 3000,
      "height": 300,
      "mark": {
        "type": "bar",
        "opacity": 1
      },
      "encoding": {
        "x": {
          "field": "position",
          "type": "ordinal",
          "sort": "ascending"
        },
        "y": {
          "field": "notesA",
          "type": "quantitative",
          "impute": {"value": "0"}
        },
        "color": {
          "field": "cat",
          "type": "nominal"
        }
      }
    },
    {
      "width": 3000,
      "height": 300,
      "mark": {
        "type": "bar",
        "opacity": 0.5
      },
      "encoding": {
        "x": {
          "field": "position",
          "type": "ordinal",
          "sort": "ascending"
        },
        "y": {
          "field": "notesBX",
          "type": "quantitative",
          "impute": {"value": "0"}
        },
        "color": {
          "field": "cat",
          "type": "nominal"
        }
      }
    },
    {
      "width": 3000,
      "height": 300,
      "mark": {
        "type": "rule",
        "opacity": 0.1
      },
      "encoding": {
        "x": {
          "field": "measureminpos",
          "type": "ordinal"
        }
      }
    }
  ],
  "config": {
    "range": {
      "category": [
        "#FFFFFF",
        "#79b7b2",
        "#ef8e3b",
        "#5079a5",
        "#dd565c",
        "#5da052",
        "#ecc853",
        "#ad7aa1",
        "#ef9ba7",
        "#9b7461",
        "#bab0ac"
      ]
    },
    "bar": {
      "continuousBandSize": 16
    }
  }
}
