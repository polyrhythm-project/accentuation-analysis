{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "title": {
    "text": "Stacked Accentual Features per Group"
  },
  "data": {
    "url": "https://polyrhythm-project.github.io/vegalitetest/129S.tsv",
    "format": {"parse": 
      {"Position": "number", "Measure": "number", "NotesA": "number", "NotesB": "number"}
    }
  },
  "datasets": {
    "LegendData": [
      {
        "label": "Notes",
        "x_min": 1,
        "y_med": 88
      },
      {
        "label": "Accents",
        "x_min": 1,
        "y_med": 66
      },
      {
        "label": "Slurs",
        "x_min": 1,
        "y_med": 44
      },
      {
        "label": "None",
        "x_min": 1,
        "y_med": 22
      }
    ]
  },
  "transform": [
    {
      "joinaggregate": [{
        "op": "min",
        "field": "Position",
        "as": "MeasureStartFull"
      }],
      "groupby": [
        "Measure"
      ]
    },
    {"calculate": "if(datum.Measure==2, datum.MeasureStartFull, 0)", "as": "MeasureLenM2"},
    {
      "joinaggregate": [{
        "op": "max",
        "field": "MeasureLenM2",
        "as": "MeasureLenFull"
      }]
    },
    {"calculate": "datum.MeasureStartFull + datum.MeasureLenFull", "as": "MeasureEndFull"},
    {"calculate": "if(datum.Measure%2!=0, datum.MeasureStartFull, 0)", "as": "MeasureStart"},
    {"calculate": "if(datum.Measure%2!=0, datum.MeasureEndFull, 0)", "as": "MeasureEnd"}
  ],
  "vconcat": [
    {
      "height": 200,
      "layer":[
        {
          "mark": {
            "type": "bar",
            "opacity": 0.005,
            "color": "#000000"
          },
          "encoding": {
            "x": {
              "field": "MeasureStart",
              "type": "ordinal"
            },
            "x2": {
              "field": "MeasureEnd"
            }
          }
        },
        {
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "Position",
              "type": "ordinal",
              "sort": "ascending",
              "title": "Tick Position"
            },
            "y": {
              "field": "NotesA",
              "type": "quantitative",
              "impute": {"value": 0},
              "title": "Group 1"
            },
            "color": {
              "field": "Category",
              "type": "nominal"
            }
          }
        }
      ]     
    },
    {
      "height": 200,
      "layer":[
        {
          "mark": {
            "type": "bar",
            "opacity": 0.005,
            "color": "#000000"
          },
          "encoding": {
            "x": {
              "field": "MeasureStart",
              "type": "ordinal"
            },
            "x2": {
              "field": "MeasureEnd"
            }
          }
        },
        {
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "Position",
              "type": "ordinal",
              "sort": "ascending",
              "title": "Tick Position"
            },
            "y": {
              "field": "NotesB",
              "type": "quantitative",
              "impute": {"value": 0},
              "title": "Group 2"
            },
            "color": {
              "field": "Category",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ], 
  "resolve": {
    "scale": {"y": "shared"}
  },
  "config": {
    "range": {
      "category": [
        "#FFFFFF",
        "#79b7b2",
        "#ef8e3b",
        "#5079a5",
        "#dd565c",
        "#5da052",
        "#ecc853",
        "#ad7aa1",
        "#ef9ba7",
        "#9b7461",
        "#bab0ac"
      ]
    },
    "bar": {
      "continuousBandSize": 200,
      "discreteBandSize": 13
    },
    "axis": {
      "titleFontSize": 14
    },
    "square": {"size": 100}
  }
}
