{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "https://polyrhythm-project.github.io/vegalitetest/129S.tsv",
    "format": {"parse": 
      {"position": "number", "measure": "number", "notesA": "number", "notesB": "number"}
    }
  },
  "transform": [
    {
      "joinaggregate": [{
        "op": "min",
        "field": "position",
        "as": "measureminposfull"
      }],
      "groupby": [
        "measure"
      ]
    },
    {"calculate": "if(datum.measure==2, datum.measureminposfull, 0)", "as": "measureleninc"},
    {
      "joinaggregate": [{
        "op": "max",
        "field": "measureleninc",
        "as": "measurelenfull"
      }]
    },
    {"calculate": "datum.measureminposfull + datum.measurelenfull", "as": "measuremaxposfull"},
    {"calculate": "if(datum.measure%2!=0, datum.measureminposfull, 0)", "as": "measureminposalt"},
    {"calculate": "if(datum.measure%2!=0, datum.measuremaxposfull, 0)", "as": "measuremaxposalt"}
  ],
  "vconcat": [
    {
      "height": 200,
      "layer":[
        {
          "selection": {
            "brush": {"type": "interval"}
          },
          "mark": {
            "type": "bar",
            "opacity": 0.005,
            "color": "#000000"
          },
          "encoding": {
            "x": {
              "field": "measureminposalt",
              "type": "ordinal"
            },
            "x2": {
              "field": "measuremaxposalt"
            }
          }
        },
        {
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "position",
              "type": "ordinal",
              "sort": "ascending",
              "title": "Tick Position"
            },
            "y": {
              "field": "notesA",
              "type": "quantitative",
              "impute": {"value": 0},
              "title": "Group 1",
              "scale": {"domain": {"selection": "brush"}}
            },
            "color": {
              "field": "category",
              "type": "nominal"
            }
          }
        }
      ]
    },
    {
      "height": 200,
      "layer":[
        {
          "mark": {
            "type": "bar",
            "opacity": 0.005,
            "color": "#000000"
          },
          "selection": {
            "brush": {"type": "interval", "encodings": ["x"]}
          },
          "encoding": {
            "x": {
              "field": "measureminposalt",
              "type": "ordinal"
            },
            "x2": {
              "field": "measuremaxposalt"
            }
          }
        },
        {
          "mark": {
            "type": "bar"
          },
          "encoding": {
            "x": {
              "field": "position",
              "type": "ordinal",
              "sort": "ascending",
              "title": "Tick Position"
            },
            "y": {
              "field": "notesB",
              "type": "quantitative",
              "impute": {"value": 0},
              "title": "Group 2",
              "scale": {"domain": [0, 5]}
            },
            "color": {
              "field": "category",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ],
  "config": {
    "range": {
      "category": [
        "#FFFFFF",
        "#79b7b2",
        "#ef8e3b",
        "#5079a5",
        "#dd565c",
        "#5da052",
        "#ecc853",
        "#ad7aa1",
        "#ef9ba7",
        "#9b7461",
        "#bab0ac"
      ]
    },
    "bar": {
      "continuousBandSize": 200,
      "discreteBandSize": 13
    },
    "axis": {
      "titleFontSize": 14
    }
  }
}
